<?xml version="1.0" encoding="UTF-8"?>
<model package="romanescobackyard" baseClass="xPDOObject" platform="mysql" defaultEngine="InnoDB" phpdoc-package="romanescobackyard" version="1.1">
    <!-- Timeline table -->
    <object class="rmTimeline" table="romanesco_timelines" extends="xPDOSimpleObject">
        <field key="id" dbtype="int" precision="11" attributes="unsigned" phptype="integer" null="false" index="pk" generated="native" />
        <field key="resource_id" dbtype="int" precision="11" attributes="unsigned" phptype="integer" null="false" />
        <field key="title" dbtype="varchar" precision="255" phptype="string" null="false" default="" />
        <field key="description" dbtype="text" phptype="string" index="fulltext" />

        <field key="date_due" dbtype="datetime" phptype="datetime" null="true" />
        <field key="date_completed" dbtype="datetime" phptype="datetime" null="true" />

        <field key="user" dbtype="int" precision="10" phptype="integer" null="false" default="" />
        <field key="icon" dbtype="varchar" precision="255" phptype="string" null="false" default="" />
        <field key="attachments" dbtype="varchar" precision="255" phptype="string" null="false" default="" />
        <field key="external" dbtype="varchar" precision="255" phptype="string" null="false" default="" />

        <aggregate alias="Resource" class="modResource" local="resource_id" foreign="id" cardinality="one" owner="foreign" />
        <aggregate alias="User" class="modUser" local="user" foreign="id" cardinality="one" owner="foreign" />
    </object>
    <!-- Notes table -->
    <object class="rmNote" table="romanesco_notes" extends="xPDOSimpleObject">
        <field key="id" dbtype="int" precision="11" attributes="unsigned" phptype="integer" null="false" index="pk" generated="native" />
        <field key="resource_id" dbtype="int" precision="11" attributes="unsigned" phptype="integer" null="false" />
        <field key="title" dbtype="varchar" precision="255" phptype="string" null="false" default="" />
        <field key="content" dbtype="text" phptype="string" index="fulltext" />
        <field key="createdon" dbtype="int" precision="20" phptype="timestamp" null="false" default="" />
        <field key="createdby" dbtype="int" precision="10" phptype="integer" null="false" default="" />

        <!-- Type defines the kind of note: issue, comment, improvement, log -->
        <field key="type" dbtype="int" precision="10" phptype="integer" null="false" default="" />

        <!-- Tags are used for segmenting each note type a bit further -->
        <field key="tags" dbtype="varchar" precision="255" phptype="string" null="false" default="" />

        <!-- User indicates who this note is assigned to -->
        <field key="user" dbtype="int" precision="10" phptype="integer" null="false" default="" />
        <field key="status" dbtype="varchar" precision="255" phptype="string" null="false" default="" />
        <field key="priority" dbtype="varchar" precision="255" phptype="string" null="false" default="" />

        <alias key="author" field="user" />

        <aggregate alias="Resource" class="modResource" local="resource_id" foreign="id" cardinality="one" owner="foreign" />
        <aggregate alias="User" class="modUser" local="user" foreign="id" cardinality="one" owner="foreign" />
    </object>
</model>